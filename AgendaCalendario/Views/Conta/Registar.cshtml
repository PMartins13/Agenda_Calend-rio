@{
    ViewData["Title"] = "Criar Conta";
}

<h2>Criar Conta</h2>

<form asp-action="Registar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input name="nome" type="text" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input name="email" type="email" class="form-control" required/>
    </div>

    <div class="form-group mt-2">
        <label>Password</label>
        <input name="password" type="password" class="form-control" required/>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registar</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var erro in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@erro.ErrorMessage</div>
        }
    </div>
}