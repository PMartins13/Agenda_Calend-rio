@{
    // Define o título da página
    ViewData["Title"] = "Sobre o Projeto";
}

<!-- Estilo para o gradiente de fundo -->
<style>
    body {
        background: linear-gradient(to top, #e3f2fd, #ffffff);
    }
</style>

<!-- Container principal -->
<div class="container py-5">
    <!-- Card com informações básicas do projeto -->
    <div class="card shadow mb-4">
        <div class="card-body bg-white">
            <h2><i class="bi bi-journal-code me-2"></i> Sobre o Projeto</h2>
            <p><strong>Curso:</strong> Licenciatura em Engenharia Informática</p>
            <p><strong>Disciplina:</strong> Desenvolvimento Web</p>
            <p><strong>Ano Letivo:</strong> 2024/2025</p>
        </div>
    </div>

    <!-- Accordion com detalhes do projeto -->
    <div class="accordion" id="accordionProjeto">
        <!-- Seção Autores -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingAutores">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAutores">
                    <i class="bi bi-people me-2"></i> Autores
                </button>
            </h2>
            <div id="collapseAutores" class="accordion-collapse collapse show" data-bs-parent="#accordionProjeto">
                <div class="accordion-body">
                    <div class="row text-center">
                        <!-- Autor 1 -->
                        <div class="col-md-6 mb-4">
                            <img src="~/images/duarte.jpg" class="rounded-circle border border-3 border-dark shadow" 
                                 alt="Foto de Duarte" style="width: 140px; height: 140px; object-fit: cover;">
                            <p class="mt-2 mb-0 fw-bold">Duarte Rosa Gonçalves</p>
                            <p class="text-muted">Nº 24846</p>
                        </div>
                        <!-- Autor 2 -->
                        <div class="col-md-6 mb-4">
                            <img src="~/images/pedro.png" class="rounded-circle border border-3 border-dark shadow" 
                                 alt="Foto de Pedro" style="width: 140px; height: 140px; object-fit: cover;">
                            <p class="mt-2 mb-0 fw-bold">Pedro Martins</p>
                            <p class="text-muted">Nº 24852</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Seção Tecnologias -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTecnologias">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTecnologias">
                    <i class="bi bi-tools me-2"></i> Tecnologias e Bibliotecas Usadas
                </button>
            </h2>
            <div id="collapseTecnologias" class="accordion-collapse collapse" data-bs-parent="#accordionProjeto">
                <div class="accordion-body">
                    <ul>
                        <li><strong>ASP.NET Core MVC</strong> – estrutura base da aplicação e views</li>
                        <li><strong>Entity Framework Core</strong> – comunicação com a base de dados via ORM</li>
                        <li><strong>SQLite</strong> – base de dados leve usada em desenvolvimento local</li>
                        <li><strong>Bootstrap 5</strong> – estilo visual e responsividade</li>
                        <li><strong>jQuery + jQuery Validation</strong> – interações e validações de formulários</li>
                        <li><strong>FullCalendar</strong> – calendário visual (<a href="https://fullcalendar.io" target="_blank">fullcalendar.io</a>)</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Seção Recursos -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingRecursos">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRecursos">
                    <i class="bi bi-book me-2"></i> Recursos de Terceiros e Referências
                </button>
            </h2>
            <div id="collapseRecursos" class="accordion-collapse collapse" data-bs-parent="#accordionProjeto">
                <div class="accordion-body">
                    <ul>
                        <li><a href="https://icons.getbootstrap.com" target="_blank">Bootstrap Icons</a> – ícones visuais no layout</li>
                        <li><a href="https://jqueryvalidation.org/" target="_blank">jQuery Validation</a> – validação de campos no front-end</li>
                        <li>Documentação oficial da Microsoft ASP.NET e Bootstrap para boas práticas</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Seção Utilizadores -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingUtilizadores">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUtilizadores">
                    <i class="bi bi-person-lock me-2"></i> Utilizadores de Teste
                </button>
            </h2>
            <div id="collapseUtilizadores" class="accordion-collapse collapse" data-bs-parent="#accordionProjeto">
                <div class="accordion-body">
                    <ul>
                        <li><strong>admin@teste.com</strong></li>
                        <li><strong>utilizador@teste.com</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>